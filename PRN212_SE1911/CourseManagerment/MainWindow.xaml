<Window x:Class="CourseManagerment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseManagerment"
        mc:Ignorable="d"
        Title="Course Schedule" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <ComboBox Name="cbCourse" Width="250" SelectedValuePath="CourseId" DisplayMemberPath="CourseCode" SelectionChanged="cbCourse_SelectionChanged"></ComboBox>
            <DataGrid Name="dgSchedule" Height="300" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="TeachingScheduleId" Binding="{Binding TeachingScheduleId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="CourseId" Binding="{Binding CourseId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="TeachingDate" Binding="{Binding TeachingDate}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Slot" Binding="{Binding Slot}"></DataGridTextColumn>
                    <DataGridTextColumn Header="RoomId" Binding="{Binding RoomId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Name="btnAdd" Content="Add" Width="80" Margin="5" Click="btnAdd_Click"></Button>
                <Button Name="btnEdit" Content="Edit" Width="80" Margin="5" Click="btnEdit_Click" ></Button>
                <Button Name="btnDelete" Content="Delete" Width="80" Margin="5"></Button>
                <Button Name="btnReset" Content="Reset" Width="80" Margin="5" ></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
