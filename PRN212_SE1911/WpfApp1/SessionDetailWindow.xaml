<Window x:Class="WpfApp1.SessionDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Phiên chơi" Height="636" Width="580"
        WindowStartupLocation="CenterOwner"
        Background="#F9F9F9"
        FontFamily="Segoe UI" FontSize="14">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Thông tin phiên -->
            <RowDefinition Height="*"/>
            <!-- Danh sách món -->
            <RowDefinition Height="Auto"/>
            <!-- Nút thao tác -->
        </Grid.RowDefinitions>

        <!-- Thông tin phiên -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="💻 Máy tính:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtComputer" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Margin="0,5" />

            <TextBlock Text="👤 Nhân viên:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtStaff" Grid.Row="1" Grid.Column="1" IsReadOnly="True" Margin="0,5"/>

            <TextBlock Text="🕒 Bắt đầu:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtStart" Grid.Row="2" Grid.Column="1" IsReadOnly="True" Margin="0,5"/>

            <TextBlock Text="🕔 Kết thúc:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtEnd" Grid.Row="3" Grid.Column="1" IsReadOnly="True" Margin="0,5"/>

            <TextBlock Text="⏱ Thời gian:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtDuration" Grid.Row="4" Grid.Column="1" IsReadOnly="True" Margin="0,5"/>

            <TextBlock Text="💰 Tổng tiền:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="txtCost" Grid.Row="5" Grid.Column="1" IsReadOnly="True" Margin="0,5" FontWeight="Bold" Foreground="DarkRed"/>
        </Grid>

        <!-- Danh sách món đã gọi -->
        <GroupBox Header="🍜 Sản phẩm đã gọi" Grid.Row="1" Margin="0,0,0,10">
            <DockPanel LastChildFill="True" Margin="0,5">
                <DataGrid x:Name="dgProducts"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  Margin="0,0,0,5"
                  Height="260"
                  DockPanel.Dock="Top">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tên món" Binding="{Binding Product.ProductName}" Width="*"/>
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="80"/>
                        <DataGridTextColumn Header="Đơn giá" Binding="{Binding UnitPrice, StringFormat={}{0:N0} VNĐ}" Width="100"/>
                        <DataGridTemplateColumn Header="Thao tác" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✏" Width="30" Margin="0,0,5,0" Click="EditOrder_Click"/>
                                        <Button Content="🗑" Width="30" Background="Red" Foreground="White" Click="DeleteOrder_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Tổng tiền sản phẩm đã gọi -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Margin="0,5,0,0">
                    <TextBlock Text="Tổng tiền món:" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txtOrderTotal" Text="0 VNĐ" FontWeight="Bold" Foreground="DarkRed" Margin="5,0,0,0"/>
                </StackPanel>
            </DockPanel>
        </GroupBox>


        <!-- Nút thao tác cố định -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="➕ Gọi món" Width="110" Margin="0,0,10,0" Click="AddProduct_Click" Height="30"/>
            <Button Content="✅ Kết thúc phiên" Width="140" Background="#007ACC" Foreground="White" Click="EndSession_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
