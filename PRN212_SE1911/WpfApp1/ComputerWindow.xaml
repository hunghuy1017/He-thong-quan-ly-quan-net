<Window x:Class="WpfApp1.ComputerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        Title="Quản lý Máy tính" Height="611" Width="1037"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:IndexConverter x:Key="IndexConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Thanh công cụ -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="🔄 Làm mới" Width="90" Margin="0,0,10,0" Click="Refresh_Click"/>
            <Button x:Name="btnAddComputer" Content="➕ Thêm máy" Width="100" Margin="0,0,10,0" Click="AddComputer_Click"/>
            <Button x:Name="btnAddType" Content="🛠️ Thêm loại máy" Width="130" Margin="0,0,10,0" Click="AddType_Click"/>
            <Button x:Name="btnSave" Content="💾 Lưu thay đổi" Width="120" Click="SaveChanges_Click"/>
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Chọn loại máy:" VerticalAlignment="Center" Margin="0,0,10,0" RenderTransformOrigin="0.838,1.155"/>
                <TextBox x:Name="txtSearchType" TextWrapping="Wrap"  Width="120" />
                <Button Content="Tìm kiếm" Click="BtnViewTypeComputer_Click"/>
            </StackPanel>
            <StatusBar Grid.Row="3" Grid.ColumnSpan="2" Margin="0,10,0,0">
                <Separator/>
                <TextBlock x:Name="lblVipCount" Text="Số lượng máy VIP: 0"/>
            </StatusBar>

        </StackPanel>
        
        
        <!-- Danh sách máy tính -->
        <DataGrid x:Name="ComputerGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  AlternationCount="1000"
                  RowBackground="White"
                  AlternatingRowBackground="White" SelectionChanged="ComputerGrid_SelectionChanged" Margin="0,0,0,55">
            <DataGrid.Resources>
                <!-- Nền trắng cho mọi dòng -->
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="White"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- ✅ STT -->
                <DataGridTemplateColumn Header="STT" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},
                                                      Path=AlternationIndex,
                                                      Converter={StaticResource IndexConverter}}"
                                       HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Tên máy -->
                <DataGridTextColumn Header="Tên máy" Binding="{Binding ComputerName}" Width="*"/>

                <!-- Loại máy -->
                <DataGridTemplateColumn Header="Loại" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="FrameworkElement" x:Key="AdminVisible">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="FrameworkElement" x:Key="UserVisible">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Resources>

                                <ComboBox Style="{StaticResource AdminVisible}"
                                          ItemsSource="{Binding DataContext.ComputerTypes, RelativeSource={RelativeSource AncestorType=Window}}"
                                          DisplayMemberPath="TypeName"
                                          SelectedValuePath="TypeId"
                                          SelectedValue="{Binding TypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Width="120"/>

                                <TextBlock Style="{StaticResource UserVisible}"
                                           Text="{Binding Type.TypeName}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Padding="4,2,4,2"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Giá/giờ -->
                <DataGridTextColumn Header="Giá/giờ" Binding="{Binding Type.HourlyRate}" Width="100" IsReadOnly="True"/>

                <!-- Trạng thái -->
                <DataGridTemplateColumn Header="Trạng thái" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox Width="100"
                                      ItemsSource="{Binding DataContext.StatusList, RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectionChanged="Status_SelectionChanged"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Xóa -->
                <DataGridTemplateColumn x:Name="DeleteColumn" Header="Xóa" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="🗑" Click="DeleteComputer_Click" Background="Red" Foreground="White" Width="40"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
    
</Window>
