<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hệ thống Quản lý Quán Net" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="WelcomeText" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="🖥️ Máy tính" Width="120" Height="40" Margin="10" Click="Computer_Click"/>
                <Button Content="🕒 Phiên chơi" Width="120" Height="40" Margin="10" Click="Session_Click"/>
                <Button x:Name="Product_ClickBtn" Content="📦 Sản phẩm" Width="120" Height="40" Margin="10" Click="Product_Click"/>
            </WrapPanel>

            <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="Account_ClickBtn" Content="👤 Tài khoản" Width="120" Height="40" Margin="10" Click="Account_Click"/>
                <Button x:Name="Report_ClickBtn" Content="📊 Doanh thu" Width="120" Height="40" Margin="10" Click="Report_Click"/>
                <Button x:Name="History_ClickBtn" Content="📜 Lịch sử khách" Width="120" Height="40" Margin="10" Click="History_Click"/>
                <Button Content="🔓 Đăng xuất" Width="120" Height="40" Margin="10" Click="Logout_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
