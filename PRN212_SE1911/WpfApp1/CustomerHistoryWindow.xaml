<Window x:Class="WpfApp1.CustomerHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        Title="Lịch sử khách hàng" Height="500" Width="800" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:IndexConverter x:Key="IndexConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Lịch sử khách hàng" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid x:Name="dgHistory"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,10,0,10"
                  AlternationCount="1000">
            <DataGrid.Columns>
                <!-- ✅ STT -->
                <DataGridTemplateColumn Header="STT" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},
                                                      Path=AlternationIndex,
                                                      Converter={StaticResource IndexConverter}}"
                                       HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Tên máy" Binding="{Binding ComputerName}" Width="*"/>
                <DataGridTextColumn Header="Bắt đầu" Binding="{Binding StartTime, StringFormat={}{0:HH:mm dd/MM}}" Width="120"/>
                <DataGridTextColumn Header="Kết thúc" Binding="{Binding EndTime, StringFormat={}{0:HH:mm dd/MM}}" Width="120"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalCost, StringFormat={}{0:N0} VNĐ}" Width="120"/>
                <DataGridTextColumn Header="Nhân viên" Binding="{Binding Session.Staff.FullName}" Width="150"/>

                <DataGridTemplateColumn Header="Món đã gọi" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Xem" Click="ViewOrders_Click" Tag="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Đóng" Width="100" HorizontalAlignment="Right" Click="Close_Click"/>
    </Grid>
</Window>
