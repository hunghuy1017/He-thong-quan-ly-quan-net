<Window x:Class="WpfApp1.AccountEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chỉnh sửa tài khoản" Height="350" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Tên đăng nhập:"/>
            <TextBox x:Name="txtUserName"/>

            <TextBlock Text="Mật khẩu:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="pwdPassword"/>

            <TextBlock Text="Họ tên:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtFullName"/>

            <TextBlock Text="Quyền:" Margin="0,10,0,0"/>
            <ComboBox x:Name="cboRole" Height="25"/>

            <CheckBox x:Name="chkActive" Content="Hoạt động" Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Lưu" Width="80" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="Hủy" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
