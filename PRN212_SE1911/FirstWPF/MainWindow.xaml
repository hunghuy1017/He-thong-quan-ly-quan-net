<Window x:Class="EmployeeManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagementApp"  mc:Ignorable="d"
        Title="Employees" Height="450" Width="800">

    <Window.Resources>
        <local:SexToBooleanConverter x:Key="SexToBooleanConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="10">
            <ListView ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Id" Width="40" DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Sex" Width="60" DisplayMemberBinding="{Binding Sex}" />
                        <GridViewColumn Header="Dob" Width="90" DisplayMemberBinding="{Binding Dob, StringFormat='dd/MM/yyyy'}" />
                        <GridViewColumn Header="Position" Width="100" DisplayMemberBinding="{Binding Position}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Margin="0,10,10,10" Padding="15">
            <StackPanel>
                <TextBlock Text="Current Employee" FontWeight="Bold" Margin="0,0,0,10" FontSize="14"/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="ID" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedEmployee.Id}" IsReadOnly="True"/>

                    <TextBlock Text="Name" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedEmployee.Name}" Margin="0,10,0,0"/>

                    <TextBlock Text="Sex" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,10,0"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                        <RadioButton Content="Male" GroupName="Sex" IsChecked="{Binding SelectedEmployee.Sex, Converter={StaticResource SexToBooleanConverter}, ConverterParameter=Male}" Margin="0,0,10,0"/>
                        <RadioButton Content="Female" GroupName="Sex" IsChecked="{Binding SelectedEmployee.Sex, Converter={StaticResource SexToBooleanConverter}, ConverterParameter=Female}"/>
                    </StackPanel>

                    <TextBlock Text="DOB" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,10,0"/>
                    <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding SelectedEmployee.Dob}" Margin="0,10,0,0"/>

                    <TextBlock Text="Position" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,10,0"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" SelectedItem="{Binding SelectedEmployee.Position}" Margin="0,10,0,0">
                        <ComboBoxItem>Developer</ComboBoxItem>
                        <ComboBoxItem>Tester</ComboBoxItem>
                        <ComboBoxItem>Leader</ComboBoxItem>
                        <ComboBoxItem>Manager</ComboBoxItem>
                    </ComboBox>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Refresh" Width="70" Height="25" Margin="0,0,10,0"/>
                    <Button Content="Add" Width="70" Height="25" Margin="0,0,10,0"/>
                    <Button Content="Edit" Width="70" Height="25"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>